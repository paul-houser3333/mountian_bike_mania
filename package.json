{
  "name": "mountian_bike_mania",
  "version": "2.1.2",
  "description": "SM Mountian Bike MERN app",
  "main": "app.js",
  "engine": {
    "node": "12.x"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev":"nodemon --ignore 'client/*'\" \"npm run client\"", 
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "lint": "eslint . && cd client && npm run lint",
    "lint:fix": "eslint --fix . && cd client && npm run lint:fix",
    "test": "cd client && npm run test"
  },
  "author": "MIke Houser",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-jwt": "^6.0.0",
    "express-validator": "^5.3.1",
    "formidable": "^1.2.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.9.13",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.3",
    "uuid": "^3.3.2"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paul-houser3333/mountian_bike_mania.git"
  },
  "bugs": {
    "url": "https://github.com/paul-houser3333/mountian_bike_mania/issues"
  },
  "homepage": "https://github.com/paul-houser3333/mountian_bike_mania#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "webpack-dev-server": "^3.11.0"
  }
}
